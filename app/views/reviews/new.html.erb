<header id="content-header">
  <h1>New Review for <%= link_to(@movie.title, @movie) %></h1>
</header>

<%= form_for [@movie, @review] do |f| %>
<fieldset>
  <ol>
    <li class="required">
      <%= f.label :name %>
      <%= f.text_field :name, size: 40, autofocus: true %>
    </li>
    <li class="required stars">
      <%= f.label :stars %>
      <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
    </li>
    <li class="required">
      <%= f.label :comment %>
      <%= f.text_field :comment, cols: 80, placeholder: "What did you think?"  %>
    </li>
  </ol>
    <p>
      <% if @review.id.nil? %>
        <%= f.submit 'Post Review' %>
      <% else %>
        <%= f.submit %>
      <% end %>
      <%= link_to "Cancel", @movie, class: 'button' %>
    </p>
</fieldset>
<% end %>